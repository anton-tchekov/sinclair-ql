CLS
PRINT "SERIAL TERMINAL"

REPeat getbaud
PRINT "BAUDRATE: ";
INPUT B%
IF B% = 75 OR B% = 300 OR B% = 600 OR B% = 1200 OR B% = 2400 OR B% = 4800 OR B% = 9600 OR B% = 19200 THEN
	BAUD B%
	EXIT getbaud
ELSE THEN
	PRINT "BAUD: 75, 300, 600, 1200, 2400, 4800, 9600, 19200"
END IF
END REPeat getbaud


REPeat getport
PRINT "SERIAL PORT: (1/2)"
INPUT SER$
IF SER$ = "1" THEN
	OPEN #3, ser1i
	EXIT getport
ELSE IF SER$ = "2" THEN
	OPEN #3, ser2i
	EXIT getport
ELSE THEN
	PRINT "INVALID SERIAL PORT NUMBER"
END IF
END REPeat getport

REPeat lineend
PRINT "LINE ENDING (ASCII CODE)"
END REPeat lineend

CLOSE #3
